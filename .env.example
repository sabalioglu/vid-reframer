# ============================================
# Modal Configuration
# ============================================
MODAL_TOKEN_ID=ak-your-token-id
MODAL_TOKEN_SECRET=as-your-token-secret

# ============================================
# AI Services
# ============================================
# Get this from Google Cloud Console - DO NOT COMMIT REAL KEY
GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# Database (Neon PostgreSQL)
# ============================================
DATABASE_URL=postgresql://user:password@ep-xxxxx.neon.tech/video-reframer?sslmode=require

# ============================================
# Frontend
# ============================================
VITE_API_URL=https://sabalioglu--video-reframer-app.modal.run
NETLIFY_DOMAIN=https://video-reframer-xxxxx.netlify.app

# ============================================
# Processing Configuration
# ============================================
# Video processing
MAX_VIDEO_SIZE_MB=500
SUPPORTED_FORMATS=mp4,mov,avi,mkv
DEFAULT_FPS=30

# YOLOv8 Detection
YOLO_MODEL=yolov8m.pt
YOLO_CONFIDENCE_THRESHOLD=0.5
YOLO_IOU_THRESHOLD=0.45

# SAM2 Segmentation
SAM2_MODEL=sam2_hiera_base_plus.pt
SAM2_GPU_REQUIRED=true
SAM2_BATCH_SIZE=4

# ByteTrack
BYTETRACK_TRACK_THRESH=0.5
BYTETRACK_TRACK_BUFFER=30
BYTETRACK_MATCH_THRESH=0.8

# Frame Sampling
SAMPLE_EVERY_N_FRAMES=5  # Process every 5th frame
MIN_FRAME_SIZE=64         # Skip small objects

# ============================================
# Modal Configuration
# ============================================
MODAL_GPU=A10G  # Options: None, T4, A40, A10G
MODAL_TIMEOUT=600  # seconds (10 minutes)
MODAL_MEMORY=8096  # MB

# ============================================
# API Configuration
# ============================================
API_KEY_PREFIX=vr_
API_RATE_LIMIT=100  # requests per hour
CORS_ORIGINS=["*"]  # Update for production

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/tmp/video-reframer.log

# ============================================
# Development
# ============================================
DEBUG=false
DEVELOPMENT_MODE=false
SKIP_DB_CHECKS=false
