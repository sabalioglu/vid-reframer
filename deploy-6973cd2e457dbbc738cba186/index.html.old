<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Video CV Pipeline - Frame Extractor</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            background: white;
            border-radius: 16px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0,0,0,0.3);
        }

        h1 {
            color: #333;
            margin-bottom: 10px;
        }

        .subtitle {
            color: #666;
            margin-bottom: 30px;
        }

        .upload-zone {
            border: 3px dashed #667eea;
            border-radius: 12px;
            padding: 60px;
            text-align: center;
            background: #f8f9ff;
            cursor: pointer;
            transition: all 0.3s;
            margin-bottom: 20px;
        }

        .upload-zone:hover {
            border-color: #764ba2;
            background: #f0f2ff;
        }

        .upload-zone.dragover {
            border-color: #764ba2;
            background: #e8ebff;
        }

        input[type="file"] {
            display: none;
        }

        .upload-icon {
            font-size: 48px;
            margin-bottom: 16px;
        }

        .btn {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 14px 32px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s;
        }

        .btn:hover {
            transform: translateY(-2px);
        }

        .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .status {
            margin: 20px 0;
            padding: 16px;
            border-radius: 8px;
            display: none;
        }

        .status.info {
            background: #e3f2fd;
            color: #1976d2;
            display: block;
        }

        .status.success {
            background: #e8f5e9;
            color: #388e3c;
            display: block;
        }

        .status.error {
            background: #ffebee;
            color: #d32f2f;
            display: block;
        }

        .results {
            margin-top: 30px;
        }

        .frames-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .frame-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
            transition: transform 0.2s;
        }

        .frame-card:hover {
            transform: scale(1.02);
        }

        .frame-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .frame-info {
            padding: 16px;
            background: #fafafa;
        }

        .frame-title {
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
        }

        .frame-meta {
            font-size: 14px;
            color: #666;
            line-height: 1.6;
        }

        .metadata {
            background: #f5f5f5;
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
        }

        .metadata h3 {
            margin-bottom: 12px;
            color: #333;
        }

        .metadata-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 16px;
        }

        .metadata-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #e0e0e0;
        }

        .metadata-label {
            font-weight: 600;
            color: #666;
        }

        .metadata-value {
            color: #333;
        }

        .loader {
            border: 4px solid #f3f3f3;
            border-top: 4px solid #667eea;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 20px auto;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>üé¨ Video CV Pipeline</h1>
        <p class="subtitle">Upload a video to extract key frames with AI-powered scene detection</p>

        <div class="upload-zone" id="uploadZone">
            <div class="upload-icon">üìπ</div>
            <h3>Click to upload or drag and drop</h3>
            <p>MP4, MOV, WebM (max 100MB)</p>
            <input type="file" id="fileInput" accept="video/*">
        </div>

        <button class="btn" id="uploadBtn" disabled>Process Video</button>

        <div class="status" id="status"></div>

        <div class="results" id="results" style="display:none;">
            <div class="metadata" id="metadata"></div>
            <h2>Extracted Frames</h2>
            <div class="frames-grid" id="framesGrid"></div>
        </div>
    </div>

    <script>
        // Configuration
        const MODAL_API_URL = 'https://sabalioglu--video-cv-pipeline-fastapi-app.modal.run';

        // Elements
        const uploadZone = document.getElementById('uploadZone');
        const fileInput = document.getElementById('fileInput');
        const uploadBtn = document.getElementById('uploadBtn');
        const status = document.getElementById('status');
        const results = document.getElementById('results');
        const framesGrid = document.getElementById('framesGrid');
        const metadata = document.getElementById('metadata');

        let selectedFile = null;

        // Upload zone click
        uploadZone.addEventListener('click', () => fileInput.click());

        // Drag and drop
        uploadZone.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadZone.classList.add('dragover');
        });

        uploadZone.addEventListener('dragleave', () => {
            uploadZone.classList.remove('dragover');
        });

        uploadZone.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadZone.classList.remove('dragover');
            const file = e.dataTransfer.files[0];
            if (file && file.type.startsWith('video/')) {
                handleFileSelect(file);
            }
        });

        // File input change
        fileInput.addEventListener('change', (e) => {
            const file = e.target.files[0];
            if (file) handleFileSelect(file);
        });

        // Handle file selection
        function handleFileSelect(file) {
            selectedFile = file;
            uploadZone.querySelector('h3').textContent = `Selected: ${file.name}`;
            uploadBtn.disabled = false;
            showStatus('info', `Ready to process ${file.name} (${formatBytes(file.size)})`);
        }

        // Upload button click
        uploadBtn.addEventListener('click', async () => {
            if (!selectedFile) return;

            uploadBtn.disabled = true;
            results.style.display = 'none';
            showStatus('info', 'Uploading video...<div class="loader"></div>');

            try {
                const formData = new FormData();
                formData.append('file', selectedFile);

                const response = await fetch(`${MODAL_API_URL}/upload`, {
                    method: 'POST',
                    body: formData
                });

                if (!response.ok) {
                    throw new Error(`Server error: ${response.status}`);
                }

                const result = await response.json();

                if (result.status === 'success') {
                    showStatus('success', '‚úÖ Video processed successfully!');
                    displayResults(result);
                } else {
                    throw new Error(result.error || 'Processing failed');
                }

            } catch (error) {
                showStatus('error', `‚ùå Error: ${error.message}`);
            } finally {
                uploadBtn.disabled = false;
            }
        });

        // Display results
        function displayResults(data) {
            results.style.display = 'block';

            // Display metadata
            const meta = data.videoMetadata;
            metadata.innerHTML = `
                <h3>üìä Video Metadata</h3>
                <div class="metadata-grid">
                    <div class="metadata-item">
                        <span class="metadata-label">Resolution:</span>
                        <span class="metadata-value">${meta.resolution}</span>
                    </div>
                    <div class="metadata-item">
                        <span class="metadata-label">Duration:</span>
                        <span class="metadata-value">${meta.duration.toFixed(2)}s</span>
                    </div>
                    <div class="metadata-item">
                        <span class="metadata-label">FPS:</span>
                        <span class="metadata-value">${meta.fps}</span>
                    </div>
                    <div class="metadata-item">
                        <span class="metadata-label">Codec:</span>
                        <span class="metadata-value">${meta.codec}</span>
                    </div>
                    <div class="metadata-item">
                        <span class="metadata-label">Total Scenes:</span>
                        <span class="metadata-value">${data.statistics.totalScenes}</span>
                    </div>
                    <div class="metadata-item">
                        <span class="metadata-label">Extracted Frames:</span>
                        <span class="metadata-value">${data.statistics.totalFrames}</span>
                    </div>
                </div>
            `;

            // Display frames
            framesGrid.innerHTML = '';
            data.frames.forEach(frame => {
                const card = document.createElement('div');
                card.className = 'frame-card';

                const personsCount = frame.persons.length;
                const productsCount = frame.products.length;

                card.innerHTML = `
                    <img src="data:image/png;base64,${frame.frameBase64}" alt="${frame.sceneId}">
                    <div class="frame-info">
                        <div class="frame-title">${frame.sceneId} - Scene ${frame.sceneNumber}</div>
                        <div class="frame-meta">
                            <div>‚è±Ô∏è ${frame.timestamp}</div>
                            <div>‚≠ê Importance: ${frame.importance}/10</div>
                            <div>üë§ ${personsCount} person(s)</div>
                            <div>üì¶ ${productsCount} product(s)</div>
                            <div style="margin-top:8px; font-style:italic;">${frame.description}</div>
                        </div>
                    </div>
                `;

                framesGrid.appendChild(card);
            });
        }

        // Helper functions
        function showStatus(type, message) {
            status.className = `status ${type}`;
            status.innerHTML = message;
        }

        function formatBytes(bytes) {
            if (bytes === 0) return '0 Bytes';
            const k = 1024;
            const sizes = ['Bytes', 'KB', 'MB', 'GB'];
            const i = Math.floor(Math.log(bytes) / Math.log(k));
            return Math.round(bytes / Math.pow(k, i) * 100) / 100 + ' ' + sizes[i];
        }
    </script>
</body>
</html>
